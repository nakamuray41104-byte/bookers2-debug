<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.1/css/all.css">
    
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    
    <% if user_signed_in? %>
    <div class="search-form" style="background-color: #f8f9fa; padding: 15px 0; border-bottom: 1px solid #dee2e6;">
      <div class="container">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center">
              <%= f.text_field :word, class: "form-control", placeholder: "検索ワード", style: "width: 250px; margin-right: 10px;" %>
              <%= f.select :range, options_for_select([['User', 'User'], ['Book', 'Book']]), {}, class: "form-control", style: "width: 120px; margin-right: 10px;" %>
              <%= f.select :method, options_for_select([['完全一致', 'perfect_match'], ['前方一致', 'forward_match'], ['後方一致', 'backward_match'], ['部分一致', 'partial_match']]), {}, class: "form-control", style: "width: 150px; margin-right: 10px;" %>
              <%= f.submit "検索", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
    
    <main>
      <p id="notice"><%= notice %></p>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
