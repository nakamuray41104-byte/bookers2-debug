<% if user_signed_in? %>
  <div class="container mt-3">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <div class="row">
        <div class="col-12">
          <div class="form-inline justify-content-center">
            <%= f.text_field :word, class: "form-control mr-2", style: "width: 300px;", placeholder: "検索ワード" %>
            
            <%= f.select :range, options_for_select([['User', 'User'], ['Book', 'Book']]), {}, class: "form-control mr-2" %>
            
            <%= f.select :method, options_for_select([
              ['完全一致', 'perfect_match'], 
              ['前方一致', 'forward_match'], 
              ['後方一致', 'backward_match'], 
              ['部分一致', 'partial_match']
            ]), {}, class: "form-control mr-2" %>
            
            <%= f.submit "検索", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
