<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Follower Users</h2>
      <% if @users.exists? %>
        <table class='table'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th>フォロー数</th>
              <th>フォロワー数</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
                <td><%= user.name %></td>
                <td><%= link_to user.followings.count, user_followings_path(user) %></td>
                <td><%= link_to user.followers.count, user_followers_path(user) %></td>
                <td><%= link_to 'Show', user %></td>
                <td><%= render 'users/follow_button', user: user %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>
